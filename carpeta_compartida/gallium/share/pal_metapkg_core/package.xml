<?xml version="1.0"?>
<package format="3">
  <name>pal_metapkg_core</name>
  <version>0.5.10</version>
  <description>The pal_metapkg_core package</description>

  <maintainer email="jordan.palacios@pal-robotics.com">Jordan Palacios</maintainer>

  <license>Proprietary</license>

  <author email="jordan.palacios@pal-robotics.com">Jordan Palacios</author>

  <buildtool_depend>catkin</buildtool_depend>

  <!-- utils -->
  <exec_depend condition="$ROS_PYTHON_VERSION == 3">python-is-python3</exec_depend>
  <exec_depend>aptitude</exec_depend>
  <exec_depend>bash-completion</exec_depend>
  <exec_depend>htop</exec_depend>
  <exec_depend>openssh-server</exec_depend>
  <exec_depend>rsync</exec_depend>
  <exec_depend>stress</exec_depend>
  <exec_depend>vim</exec_depend>

  <!-- pal environment -->
  <exec_depend>pal_catkin_environment</exec_depend>
  <exec_depend>pal_debian_utils</exec_depend>

  <!-- ros -->
  <exec_depend>rosbash</exec_depend>

  <export>
    <metapackage/>
  </export>

</package>
