<launch>
	<arg name="map"   		   default=""/>
	<!-- Useful only if running multiple instances of pal_map_manager (ex. fleet)-->
	<arg name="namespace"	   default=""/>
	<arg name="use_hostname"   default="true"/>
	<arg name="hostname" 	   default="$(optenv HOSTNAME)"/>
	<!-- Optional: if not provided the param /pal_robot_info/type will be used -->
	<!-- Notice: if provided has the priority over /pal_robot_info/type -->
	<arg name="robot_type"     default=""/>


	<!-- Run the map server -->
	<node name="$(anon pal_map_manager)" pkg="pal_map_manager" type="pal_map_manager_node" output="screen">
		<param name="map"      		 value="$(arg map)" />
		<param name="namespace"      value="$(arg namespace)" />
		<param name="hostname"       value="$(arg hostname)"/>
		<param name="use_hostname"   value="$(arg use_hostname)"/>
		<param name="robot_type"     value="$(arg robot_type)"/>
	</node>

</launch>
